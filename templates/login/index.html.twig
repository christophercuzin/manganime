{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
<main class="container-fluid bg-light vh-100">
    <div class="row justify-content-center align-items-start vh-100 bg-light">
        <div class="col-lg-6 col-sm-12 border rounded-4 mt-5">
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path('app_login') }}" method="post">
                <h1 class="text-center">Connexion</h1>
                <label for="username" class="form-label">Email:</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control mb-3"/>

                <label for="password" class="form-label">Password:</label>
                <input type="password" id="password" name="_password" class="form-control mb-5"/>

                

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {# If you want to control the URL the user is redirected to on success
                <input type="hidden" name="_target_path" value="/account"/> #}

                <div class="text-center">
                    <button type="submit" class="btn btn-primary col-6 mb-3">Login</button>
                </div>
                <div class="text-center mb-3">
                    <p>Pas encore de compte ?</p>
                    <a href="{{ path('app_register') }}">Cr√©er un compte</a>
                </div>
            </form>
        </div>
    </div>
</main>
{% endblock %}
